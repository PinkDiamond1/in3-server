{
  "extends": "solhint:all",
  "rules": {
    "indent": [
      "error",
      4
    ],
    "bracket-align": false,
    "compiler-fixed": false,
    "max-line-length": [
      "error",
      140
    ],
    "mark-callable-contracts": false,
    "function-max-lines": [
      "error",
      60
    ],
    "compiler-fixed": "error"
  }
}